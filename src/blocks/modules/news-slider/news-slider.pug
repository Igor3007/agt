mixin card-news(data)
    .card-news
        .card-news__image
            +picture(data.img)
        .card-news__main
            .card-news__title: a(href='#')= data.name
            .card-news__desc: span Утепленная куртка с мембранным верхом и брызгозащитными молниями. В большей степени предназначена для города, однако может использоваться и в полевых условиях. Защищает от ветра, мелких осадков и мокрого снега. 
            .card-news__date 21.09.<sup>2024</sup>




mixin news-slider

    -
        const reviews = [
            {img: '/img/news/n1', 'name':'Мы в тройке лидеров!'}, 
            {img: '/img/news/n2', 'name':'Обзор брюк для ходьбы'}, 
            {img: '/img/news/n3', 'name':'Обзор. Утеплённая куртка BW206'}, 
        ]

    section.section-news-slider
        .container
            .news-slider
                
                .news-slider__top
                    .news-slider__title Новости
                    .news-slider__all
                        a(href='#') 
                            span Все новости
                .news-slider__list
                    .splide(data-slider="default")
                        .splide__track
                            .splide__list
                                each item in reviews
                                    .splide__slide: .news-slider__item: +card-news(item)
