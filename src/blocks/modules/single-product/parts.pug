mixin sp-head
    .sp-head 
        .sp-head__back: a(href='#'): +icons('#ic_arr-left')
        .sp-head__title
            h1 Зимний сигнальный огнестойкий анстистатический полукомбинезон Brodeks, mw18-05, желтый/черный
            span Модель KW603
        
        .sp-head__details
            .sp-head__wrp-price
                .sp-head__price 7200p
                .sp-head__oldprice 9300p
            .sp-head__sale: span 12%
            .sp-head__action
                .sp-head__ic
                    span: +icons('#ic_compare', 30)
                    span: +icons('#ic_heart', 30)
                    span: +icons('#ic_share', 30)

mixin sp-gallery
     
        .sp-gallery
            .sp-gallery__slider
                .sp-gallery__brand: +bgimage('/img/brands/image8.png')
                .sp-gallery__typebrand
                    span Европейский бренд
                a(href='#set' data-scroll="smooth").sp-gallery__set
                    +icons('#ic_set')
                    span Собери комплект
                .splide(data-slider="sp-gallery")
                    .splide__track
                        .splide__list
                            .splide__slide
                                +picturePng('/img/product/sp1')
                            .splide__slide
                                +picturePng('/img/product/sp2')
                            .splide__slide
                                +picturePng('/img/product/p1')
                            .splide__slide
                                +picturePng('/img/product/p2')
                    

mixin sp-details
    .sp-details
        .sp-details__radio
            +radio('Без опушки', 'op', true)
            +radio('C опушкой', 'op')

        .sp-details__desc
            ul
                li Защищает от воды, масел. брызг кислот и щелочей
                li Подходит для работы в IV и особом климатическом поясе
                li Компактный утеплитель

        .sp-details__colorpick
            .sp-details__border(data-title="Цвет")
                .sp-details__left
                    span.color-preview(style="background-color: #1958B2")
                    span.color-name Серый / Графит
                .sp-details__right
                    span(data-select-color="open") Выбрать другой

        .sp-details__sizepick
            .sp-details__border(data-title="Выбранные размеры")
                .sp-details__left
                    span.size-name Размеры не выбраны
                    span.size-tooltip
                        +icons('#ic_tooltip', 18)
                .sp-details__right
                    span Выбрать
        
        .sp-details__tablesize
            span Таблицы размеров

        .sp-details__tocart
            button.btn
                +icons('#ic_bag')
                span В корзину

