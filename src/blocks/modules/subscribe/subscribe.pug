mixin subscribe
    section.section-subscribe
        .container
            .subscribe
                .subscribe__text Подпишитесь на рассылку и будьте в курсе! <br> Акции, скидки, новые обзоры
                .subscribe__form
                    form(action='#' method='POST')
                        .form
                          .form__item
                            .form__subitem: input(type="email" placeholder="Укажите ваш Email")
                            .form__subitem
                                button.btn Подписаться на новости
                .subscribe__subtitle Социальные медиа
                .subscribe__social
                    ul
                        li: a.ic-tg(href='#'): +icons('#ic_tg', 24)
                        li: a.ic-vk(href='#'): +icons('#ic_vk', 30)
                        li: a.ic-yt(href='#'): +icons('#ic_yt', 28)
